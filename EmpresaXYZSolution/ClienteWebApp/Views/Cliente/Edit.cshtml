@model ClienteWebApp.Models.Cliente

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cliente</legend>

        @Html.HiddenFor(model => model.idCliente)

        <div class="editor-label">
            @Html.LabelFor(model => model.nome)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.nome, new {@readonly =  "readonly" })
            @Html.ValidationMessageFor(model => model.nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.endereco)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.endereco, new {@readonly =  "readonly" })
            @Html.ValidationMessageFor(model => model.endereco)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.telResidencial)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.telResidencial, new {@readonly =  "readonly" })
            @Html.ValidationMessageFor(model => model.telResidencial)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.telCelular)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.telCelular, new {@class =  "telCssClass" })
            @Html.ValidationMessageFor(model => model.telCelular)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dataNascimento)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dataNascimento)
            @Html.ValidationMessageFor(model => model.dataNascimento)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script type="text/ecmascript">
    $(document).ready(function (e) {
        $('.telCssClass').mask('(99)9999-9999');
        e.preventDefault();
    });
</script>

}
